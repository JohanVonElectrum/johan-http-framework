{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-tabs": "error",
        "semi": "error",
        "indent": [2, 4],
        "comma-dangle": "error",
        "@typescript-eslint/ban-types": 1
    }
}
